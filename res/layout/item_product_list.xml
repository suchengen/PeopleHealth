<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_item_product_list_intro"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@android:color/black" />

    <TextView
        android:id="@+id/tv_item_product_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_item_product_list_intro"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_item_product_list_intro"
        android:text="人人保健品" />

    <TextView
        android:id="@+id/tv_item_product_list_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_item_product_list_intro"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/iv_item_product_list_intro"
        android:text="￥300元" />

    <TextView
        android:id="@+id/tv_item_product_list_add_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_item_product_list_intro"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="@string/add_shopping_cart" />

</RelativeLayout>